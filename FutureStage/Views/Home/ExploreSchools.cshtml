@model IEnumerable<School>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Explore Schools</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/FrontendAssets/css/style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>

<body>

    <!-- Navbar -->

    @await Html.PartialAsync("_navbar")

    <div class="row" style="margin-right:unset">

        <div class="col-md-4">

        </div>

        <div class="col-md-8 mt-5">

            <div class="row">

                <div class="col-md-10 offset-md-1">

                    @foreach (var item in Model)
                    {
                        <div class="card">
                            <div class="row">
                                <div class="col-md-4">
                                    <img src="@item.ImagePath" class="" alt="@item.Name">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        
                                            <h5 class="card-title">@item.Name</h5>
                                            <p class="card-text"> <i class="bi bi-geo-alt-fill text-success"></i> @item.Area.AreaName, @item.Area.City.CityName</p>
                                            <div class="row">
                                                <div class="col-6">
                                                    <div class="text-secondary">Affiliated To</div>
                                                    <div>
                                                        <span></span>
                                                        @{
                                                            int i = 0;
                                                            int len = item.School_EducationBoards.Count - 1;
                                                        }
                                                        @foreach (var temp in item.School_EducationBoards)
                                                        {
                                                            if (i++ < len)
                                                            {
                                                                @temp.EducationBoard.EducationBoardTitle<span>,</span>
                                                                
                                                            }
                                                            else
                                                            {
                                                                @temp.EducationBoard.EducationBoardTitle
                                                            }
                                                        }
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <div class="text-secondary">Title</div>
                                                    <div>value</div>
                                                </div>
                                            </div>
                                            <div>
                                                <p class="card-text">
                                                    <small class="text-muted">
                                                        <a asp-action="SchoolDetails" asp-route-id="@item.ID" class="btn btn-outline-success mt-4 btn-sm">View Details</a>
                                                    </small>
                                                </p>
                                            </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>

            </div>

        </div>

    </div>



    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>

</body>

</html>
