@model IEnumerable<School>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Explore Schools</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/FrontendAssets/css/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <link href="~/FrontendAssets/css/filter_card.css" rel="stylesheet" />

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
</head>

<body>

    <!-- Navbar -->

    @await Html.PartialAsync("_navbar")

    <button type="button" class="filter-icon d-md-none">
        <i class="bi bi-funnel"></i>
    </button>


    <div class="row" style="margin-right:unset">
        <div class="col-md-1">

        </div>
        <div class="col-md-3">
            <div class="container-filter sticky-top">
                <div class="filter-card">
                    <h4>Filters</h4>
                    <div class="form-group">
                        <button type="button" class="btn btn-outline-dark reset-btn">
                            Reset All  <i class="bi bi-arrow-counterclockwise"></i>
                        </button>
                        <button type="button" class="btn btn-primary apply-btn d-md-none">
                            Apply Filters
                        </button>
                    </div>
                    <div class="form-group">
                        <label for="schoolBoard">School Board</label>
                        <select id="schoolBoard" class="form-select mt-2">
                            <option selected disabled>Choose School Board</option>
                            <option value="board1">Board 1</option>
                            <option value="board2">Board 2</option>
                            <option value="board3">Board 3</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="city">City</label>
                        <select id="city" class="form-select mt-2">
                            <option selected disabled>Choose City</option>
                            <option value="city1">City 1</option>
                            <option value="city2">City 2</option>
                            <option value="city3">City 3</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="area">Area</label>
                        <select id="area" class="form-select mt-2">
                            <option selected disabled>Choose Area</option>
                            <option value="area1">Area 1</option>
                            <option value="area2">Area 2</option>
                            <option value="area3">Area 3</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="monthlyFees">Monthly Fees</label>
                        <select id="schoolClass" class="form-select mt-2">
                            <option selected disabled>Choose School Class</option>
                            <option value="class1">Class 1</option>
                            <option value="class2">Class 2</option>
                            <option value="class3">Class 3</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="schoolClass">School Class</label>
                        <select id="schoolClass" class="form-select mt-2">
                            <option selected disabled>Choose School Class</option>
                            <option value="class1">Class 1</option>
                            <option value="class2">Class 2</option>
                            <option value="class3">Class 3</option>
                        </select>
                    </div>

                </div>

            </div>
        </div>

        <div class="col-md-7 mt-5">



            @foreach (var item in Model)
            {
            <div class="card">
                <div class="row">
                    <div class="col-md-4">
                        <img src="@item.ImagePath" class="" alt="@item.Name">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">

                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text"> <i class="bi bi-geo-alt-fill text-success"></i> @item.Area.AreaName, @item.Area.City.CityName</p>
                            <div class="row">
                                <div class="col-6">
                                    <div class="text-secondary">Affiliated To</div>
                                    <div>
                                        <span></span>
                                        @{
                                            int i = 0;
                                            int len = item.School_EducationBoards.Count - 1;
                                        }
                                        @foreach (var temp in item.School_EducationBoards)
                                        {
                                            if (i++ < len)
                                            {
                                                @temp.EducationBoard.EducationBoardName<span>,</span>

                                            }
                                            else
                                            {
                                                @temp.EducationBoard.EducationBoardName
                                            }
                                        }
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="text-secondary">
                                        Monthly Fees
                                    </div>

                                    <div>
                                        @{
                                            int count = 0;
                                            int sum = 0;
                                            int monthlyFees;
                                            foreach (var item2 in item.SchoolStandards)
                                            {
                                                foreach (var item3 in item2.StandardFees)
                                                {
                                                    sum += item3.Amount;
                                                    count++;
                                                }
                                            }
                                            if (sum == 0 || count == 0)
                                            {
                                                monthlyFees = 4800;
                                            }
                                            else
                                            {
                                                monthlyFees = sum / count;
                                            }

                                        }
                                        <i class="fas fa-rupee-sign"></i>

                                        @monthlyFees
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-6">
                                    <div class="text-secondary">School Level</div>
                                    <div>
                                        Upto 12th
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="text-secondary">
                                        Admission Status
                                    </div>

                                    <div>
                                        <span class="text-success">OPEN</span> <i class="fas fa-info-circle"></i>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">

                        </div>
                        <div class="col-6">
                            <p class="card-text">
                                <small class="text-muted fs-6">
                                    <a asp-action="SchoolDetails" asp-controller="SearchSchool" asp-route-id="@item.ID" class="view-details-btn">View Details <i class="fas fa-eye"></i> </a>
                                </small>
                            </p>
                        </div>
                    </div>
                </div>
                <span class="text-success me-auto card-bottom-text" style="margin-top: -21px; margin-bottom: -13px;">
                    <i class="fas fa-handshake"></i>
                    Authorized Application Partner
                </span>
            </div>
            }

        </div>

        <div class="col-md-1">

        </div>



    </div>


    <script>
        $(document).ready(function () {
            var filterCard = $(".filter-card");
            var filterIcon = $(".filter-icon");
            var applyBtn = $(".apply-btn");

            function showFilterCard() {
                filterCard.fadeIn();
            }

            function hideFilterCard() {
                filterCard.fadeOut();
            }

            function toggleFilterCard() {
                filterCard.fadeToggle();
            }

            function updateFilterCardVisibility() {
                if ($(window).width() < 768) {
                    hideFilterCard();
                } else {
                    showFilterCard();
                }
            }

            filterIcon.on("click", function () {
                toggleFilterCard();
            });

            applyBtn.on("click", function () {
                hideFilterCard();
            });

            $(window).on("resize", function () {
                updateFilterCardVisibility();
            });

            updateFilterCardVisibility();
        });



    </script>

   

</body>

</html>
