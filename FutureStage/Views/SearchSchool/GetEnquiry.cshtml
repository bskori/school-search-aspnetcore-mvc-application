@model AdmissionEnquiry
@{
    ViewData["Title"] = "Admission Enquiry!";
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Explore Schools</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/FrontendAssets/css/style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>

    @await Html.PartialAsync("_navbar");

    <div class="container">
        <div class="row">
            <div class="col-md-4 offset-md-4 mt-4">
                <div class="card">
                    <h3 class="text-center my-3">Request a Callback</h3>
                    <hr />
                    <form asp-action="GetEnquiry">
                        <div>
                            <input type="hidden" asp-for="ID" value="0" />
                            <input type="hidden" asp-for="SchoolID" value="@ViewBag.SchoolID" />
                            <input type="hidden" asp-for="ParentID" value="@ViewBag.ParentID" />
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <label asp-for="EnquiryDate" class="form-label"></label>
                                <input type="date" asp-for="EnquiryDate" class="form-control" />
                                <span class="text-danger" asp-validation-for="EnquiryDate"></span>
                            </div>
                            <div class="col">
                                <label class="form-label">Class</label>
                                <select asp-for="@Model.SchoolStandardID" asp-items="ViewBag.Standards" class="form-control">
                                    <option value="">- select class -</option>
                                </select>
                                <span class="text-danger" asp-validation-for="SchoolStandard.Standard.StandardTitle"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" asp-for="EnquiryDescription"></label>
                            <textarea class="form-control" asp-for="EnquiryDescription"></textarea>
                            <span class="text-danger" asp-validation-for="EnquiryDescription"></span>
                        </div>
                        <div class="mb-3">

                            <input type="submit" value="Submit" class="btn btn-primary" />
                            <a asp-action="SchoolDetails" asp-route-id="@ViewBag.SchoolID" class="btn btn-danger">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        @await Html.PartialAsync("_footer");
    </div>

</body>
