@model SiteAdmin

    <head>
        <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    </head>
    <body class="bg-secondary bg-opacity-25">
        <div class="container my-5">

            <div class="row align-items-center">
                <div class="col-md-4 offset-4">
                    <p>
                        <h3 class="shadow p-2 bg-info text-white text-center">Site admin login</h3>
                    </p>
                    <form asp-action="doLogin">

                        <div class="mb-3">
                            <label class="form-label" asp-for="EmailAddress"></label>
                            <input class="form-control" asp-for="EmailAddress" placeholder="name@gmail.com" />
                            <span class="text-danger" asp-validation-for="EmailAddress"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" asp-for="Password"></label>
                            <input class="form-control" asp-for="Password" type="password" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="mb-6 d-grid mt-3">
                            <input type="submit" class="btn btn-success btn-lg" value="Login" />
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </body>