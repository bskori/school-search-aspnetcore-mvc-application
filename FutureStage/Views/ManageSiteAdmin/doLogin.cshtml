@model LoginVM

@{ 
    Layout = null;
}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/SiteAdminAssets/css/LoginStyleSheet.css" rel="stylesheet" />
    <link href="~/lib/toastr.js/toastr.css" rel="stylesheet" />

    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnAdminLogin").click(function () {
                AdminLogin();
            });
        });
        function AdminLogin() {
            var emailAddress = $("#email").val();
            var password = $("#password").val();

            var loginVM = { EmailAddress: emailAddress, Password: password };

            $.ajax({
                async: true,
                type: 'POST',
                dataType: 'JSON',
                contentType: 'application/json; charset=utf-8',
                dataType: JSON.stringify(loginVM),
                url: '/ManageSiteAdmin/doLogin',
                success: function (response) {
                    if (response.success === true) {
                        toastr.success(response.message, 'Succes Alert', { timeOut: 3000 });
                    } else {
                        toastr.info(response.message, 'Information Alert', { timeOut: 3000 });
                    }
                },
                error: function () {
                    toastr.error('There is some problem to process your request.', 'Error Alert', { timeOut: 3000 });
                }
            })
        };
    </script>

</head>
<body>
    

    <div class="container">
        <h1>Admin Login</h1>
       
        <form asp-action="doLogin">
            <div class="form-group">
                <input id="email" class="form-control" asp-for="EmailAddress" placeholder="Email address">
                <i class="fas fa-user"></i>
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="password" type="password" class="form-control" asp-for="Password" placeholder="Password">
                <i class="fas fa-lock"></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button id="btnAdminLogin" type="submit" class="btn btn-primary w-100">Login</button>
        </form>
    </div>

    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>
</body>