@model SiteAdmin

<head>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/SiteAdminAssets/css/LoginStyleSheet.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

</head>
    <body>
            <div class="container">
                <div class="login-container">
                    <div class="row align-items-center">

                        <div class="col-lg-6">
                            <p>
                                <h1 class="ml-3 text-center text-success shadow font-monospace"><i class="bi bi-buildings"></i>FUTURESTAGE</h1>
                            </p>
                        </div>
                        <div class="col-lg-4 offset-lg-1 shadow">
                            <p>
                                <h3 class="shadow p-2 bg-info text-white text-center">Site admin login</h3>
                            </p>
                            @if (TempData["Error"] != null)
                            {
                                <div class="col-md-12 alert alert-danger my-3">
                                    <span><b>Sorry!</b> - @TempData["Error"]</span>
                                </div>
                            }

                            <form asp-action="doLogin">

                                <div class="mb-3">
                                    <label class="form-label" asp-for="EmailAddress"></label>
                                    <input class="form-control" asp-for="EmailAddress" placeholder="name@gmail.com" />
                                    <span class="text-danger" asp-validation-for="EmailAddress"></span>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Password"></label>
                                    <input class="form-control" asp-for="Password" type="password" />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="mb-6 d-grid mt-3">
                                    <input type="submit" class="btn btn-block btn-success btn-lg" value="Login" />
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
    </body>