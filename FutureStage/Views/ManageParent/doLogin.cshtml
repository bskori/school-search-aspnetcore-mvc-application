    <div class="login-form">
        <h2>Sign In</h2>
        <form asp-action="doLogin">
            <div class="form-group">
                <label for="email">Email</label>
                <input asp-for="EmailAddress" type="email" id="email" placeholder="enter email" >
                <small><span asp-validation-for="EmailAddress" class="text-danger"></span></small>
            </div>
            <div class="form-group mt-4">
                <label for="password">Password</label>
                <input type="password" id="password" asp-for="Password" placeholder="enter password" >
                <small><span asp-validation-for="Password" class="text-danger"></span></small>
            </div>
            <button type="submit" class="btn btn-login">Sign In</button>
            <div class="register-link">
                <p>Already have an account? <a asp-action="Register">Register</a></p>
            </div>
        </form>
    </div>

