@model LoginVM

@{
    Layout = null;
    ViewData["Title"] = "User Login";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FutureStage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="~/FrontendAssets/css/style.css">
    
</head>
<body>

    @await Html.PartialAsync("_navbar")

    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3 mt-3">
                <div class="card col-md-8 offset-md-2 p-3 px-5">
                    <h2 class="text-primary text-center">User SignIn</h2>
                    @if(TempData["Error"] != null)
            {
                <div class="col-md-12 alert alert-danger my-3">
                    <span> <b>Sorry!</b> - @TempData["Error"] </span>
                </div>
            }
                    <form asp-action="doLogin">

                        <div class="form-group mt-3">
                            <label class="form-label">Email or UserName</label>
                            <input asp-for="EmailAddress" class="form-control" />
                            <span class="text-danger" asp-validation-for="EmailAddress"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label class="form-label">Password</label>
                            <input type="password" asp-for="Password" class="form-control" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group mt-4">
                            <input type="submit" value="Sign In" class="btn btn-success w-100 justify-content-center" />
                            <span>Dont't have an account? <a asp-action="Register" class="btn btn-link">Register</a></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        @await Html.PartialAsync("_footer")
    </div>

</body>