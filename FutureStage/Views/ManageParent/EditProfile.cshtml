@model Parent

@{
    ViewData["Title"] = "Edit user profile.";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="~/FrontendAssets/css/edit_profile.css" rel="stylesheet" />
    <link href="~/FrontendAssets/css/style.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div style="margin-bottom:3rem">
        @await Html.PartialAsync("_navbar");
    </div>
    <div class="container">
        <h2 class="mb-4">Edit Profile</h2>
        <form asp-action="EditProfile">
            <div class="form-group">
                <label for="name">Name:</label>
                <input asp-for="Name" class="form-control" placeholder="Enter your name">
            </div>
            <div class="form-group">
                <label for="address">Address:</label>
                <textarea asp-for="Address" class="form-control" placeholder="Enter your address"></textarea>
            </div>
            <div class="form-group">
                <label for="email">Email Address:</label>
                <input asp-for="EmailID" class="form-control" placeholder="Enter your email address">
            </div>
            <div class="form-group">
                <label for="mobile">Mobile Number:</label>
                <input asp-for="MobileNo" class="form-control" placeholder="Enter your mobile number">
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input asp-for="Password" class="form-control" placeholder="Enter your password">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>


    <div style="margin-top:3rem">
        @await Html.PartialAsync("_footer");
    </div>

</body>
</html>
