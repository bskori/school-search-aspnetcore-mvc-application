@using Microsoft.AspNetCore.Http
<nav class="navbar navbar-expand-lg navbar-light bg-light" style="padding: 0.4rem 1rem;">
    <a class="navbar-brand" asp-action="Index" asp-controller="Home">
        <div class="logo">
            FUTURE<span>STAGE</span>
        </div>
    </a>  
        <ul class="ms-auto" style="list-style:none;">
            @if (Context.Session.GetInt32("ID") != null)
            {
                <li>
                    <div class="dropdown">
                        <button class="btn btn-secondary rounded-circle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="round-icon fa fa-user"></i>
                        </button>
                        <span class="fw-bold ">Hi @Context.Session.GetString("Name")!</span>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li><a class="dropdown-item" asp-action="EditProfile" asp-controller="ManageParent" asp-area="" asp-route-id="@Context.Session.GetInt32("ID")"> <i class="fas fa-user-edit"></i> Edit Profile</a></li>
                            <li class="pb-2"><a class="dropdown-item" asp-action="LogOut" asp-controller="ManageParent" asp-area=""> <i style="color:red;" class="fas fa-sign-out-alt"></i> Log Out</a></li>
                        </ul>
                    </div>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="btn btn-signin" asp-action="doLogin" asp-controller="ManageParent" type="button">Sign In</a>
                </li>
            }

        </ul>
    @*</div>*@
</nav>
<div class="p-2" style="background-color: #f89782; ">

</div>