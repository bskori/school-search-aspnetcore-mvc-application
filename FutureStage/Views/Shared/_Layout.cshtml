    <script type="text/javascript">

        $(document).ready(function () {

            $("#advanceSearchBtn").click(function () {
                var stateId = $("#state").val();
                var cityId = $("#city").val();
                var areaId = $("#area").val();

                if (stateId != -1 || cityId != -1 || areaId != -1)
                {
                    $.ajax({
                        url: "/SearchSchool/ExploreSchools",
                        type: "POST",
                        data: {
                            StateId: stateId,
                            CityId: cityId,
                            AreaId: areaId
                        },
                        success: function (result) {
                            $("body").html(result)
                        },
                        error: function (error) {
                            // Handle the error response
                        }
                    });
                }
            });

            $('#state').on('change', function () {
                var stateId = $(this).val();
                if (stateId) {
                    $.ajax({
                        url: '/AdvanceSearch/LoadCities',
                        type: 'GET',
                        data: { stateId: stateId },
                        success: function (response) {
                            $('#city option').remove();
                            var res = '<option selected> Choose an city </option>';
                            for (var i = 0; i < response.length; i++) {
                                res += '<option value ="' + response[i].cityId + '"> ' + response[i].cityName + ' </option>';
                            }
                            $('#city').html(res);
                        },
                        error: function () {
                            alert('An error occured while retrieving the data.');
                        }
                    });

                }
            });

            $('#city').on('change', function () {
                var cityId = $(this).val();
                if (cityId) {
                    $.ajax({
                        url: '/AdvanceSearch/LoadAreas',
                        type: 'GET',
                        data: { cityId: cityId },
                        success: function (response) {
                            $('#area option').remove();
                            var res = '<option selected> Choose an area </option>';
