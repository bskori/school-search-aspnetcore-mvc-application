
<div class="filter-card sticky-top">
    <h4>Filters</h4>
    <div class="form-group">
        <button type="button" class="btn btn-primary">Apply Filters</button>
        <button type="button" class="btn btn-outline-dark btn-reset btn">
            <i class="bi bi-arrow-counterclockwise"></i> Reset All
        </button>
    </div>
    <div class="form-group">
        <label for="schoolBoard">School Board</label>
        <select id="schoolBoard" class="form-select">
            <option selected disabled class="text-secondary">Choose School Board</option>
            <option value="board1">Board 1</option>
            <option value="board2">Board 2</option>
            <option value="board3">Board 3</option>
        </select>
    </div>
    <div class="form-group">
        <label for="city">City</label>
        <select id="city" class="form-select">
            <option selected disabled class="text-secondary">Choose City</option>
            <option value="city1">City 1</option>
            <option value="city2">City 2</option>
            <option value="city3">City 3</option>
        </select>
    </div>
    <div class="form-group">
        <label for="area">Area</label>
        <select id="area" class="form-select">
            <option selected disabled class="text-secondary">Choose Area</option>
            <option value="area1">Area 1</option>
            <option value="area2">Area 2</option>
            <option value="area3">Area 3</option>
        </select>
    </div>
    <div class="form-group">
        <label for="monthlyFees">Monthly Fees</label>
        <input id="monthlyFees" type="text" class="form-control" placeholder="Enter Monthly Fees">
    </div>
    <div class="form-group">
        <label for="schoolClass">School Class</label>
        <select id="schoolClass" class="form-select">
            <option selected disabled class="text-secondary">Choose School Class</option>
            <option value="class1">Class 1</option>
            <option value="class2">Class 2</option>
            <option value="class3">Class 3</option>
        </select>
    </div>
</div>
