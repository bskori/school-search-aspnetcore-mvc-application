<!DOCTYPE html>
<html>
<head>
    <title>Vertical Filter Card</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
        }

        .filter-card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

            .filter-card h4 {
                margin-bottom: 20px;
            }

        .form-group {
            margin-bottom: 20px;
        }

        .btn-reset {
            background-color: #dc3545;
            color: #fff;
            border: none;
            border-radius: 4px;
            padding: 8px 16px;
            cursor: pointer;
        }

            .btn-reset:hover {
                background-color: #c82333;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="filter-card">
            <h4>Filters</h4>
            <div class="form-group">
                <label for="schoolBoard">School Board</label>
                <select id="schoolBoard" class="form-select">
                    <option selected disabled>Choose School Board</option>
                    <option value="board1">Board 1</option>
                    <option value="board2">Board 2</option>
                    <option value="board3">Board 3</option>
                </select>
            </div>
            <div class="form-group">
                <label for="city">City</label>
                <select id="city" class="form-select">
                    <option selected disabled>Choose City</option>
                    <option value="city1">City 1</option>
                    <option value="city2">City 2</option>
                    <option value="city3">City 3</option>
                </select>
            </div>
            <div class="form-group">
                <label for="area">Area</label>
                <select id="area" class="form-select">
                    <option selected disabled>Choose Area</option>
                    <option value="area1">Area 1</option>
                    <option value="area2">Area 2</option>
                    <option value="area3">Area 3</option>
                </select>
            </div>
            <div class="form-group">
                <label for="monthlyFees">Monthly Fees</label>
                <input id="monthlyFees" type="text" class="form-control" placeholder="Enter Monthly Fees">
            </div>
            <div class="form-group">
                <label for="schoolClass">School Class</label>
                <select id="schoolClass" class="form-select">
                    <option selected disabled>Choose School Class</option>
                    <option value="class1">Class 1</option>
                    <option value="class2">Class 2</option>
                    <option value="class3">Class 3</option>
                </select>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary">Apply Filters</button>
                <button type="button" class="btn btn-reset">
                    <i class="bi bi-arrow-counterclockwise"></i> Reset All
                </button>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
