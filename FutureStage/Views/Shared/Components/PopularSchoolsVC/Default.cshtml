@model IEnumerable<School>



    <div class="text-center" style="margin-top:5rem;margin-bottom:2rem;">
        <h2>Most Applied Schools</h2>
        <p class="fs-5 text-secondary">Apply to our parent’s top applied schools</p>
    </div>

    <div class="slider-container mb-4">
        <div class="slider-wrapper">
            @foreach (var school in Model)
            {
                <div class="slider-item ">
                    <div class="slider-card">
                        <img src="@school.ImagePath" alt="Image 1">
                        <div class="slider-card-text">
                            <h6>@school.Name</h6>
                            <p>@school.Area.AreaName, @school.Area.City.CityName</p>
                            <div style="margin-top:2rem">
                                <span class="fw-bold">Affiliated To:</span>
                                @foreach(var board in school.School_EducationBoards)
                {
                            <span>@board.EducationBoard.EducationBoardName,  </span>
                }
                            </div>
                            <div class="text-center" style="margin: 2rem 0">
                                <a asp-action="ExploreSchools" asp-controller="SearchSchool" asp-route-id="@school.ID" class="btn btn-primary w-50 fw-bold">View Details</a>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="slider-controls">
            <button class="slider-prev-btn">&#8249;</button>
            <button class="slider-next-btn">&#8250;</button>
        </div>
    </div>
    


