@model IEnumerable<City>

@{ 
    ViewData["Title"] = "List of Cities";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2 class="text-success text-center shadow py-3 my-5">List of Cities</h2>
    </div>
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th class="align-middle">@Html.DisplayNameFor(m => m.CityName)</th>
                    <th class="align-middle">@Html.DisplayNameFor(m => m.State.StateName)</th>
                    <th class="align-middle">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
            {
                <tr class="text-center">
                    <td class="align-middle">@item.CityName</td>
                    <td class="align-middle">@item.State.StateName</td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ID">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.ID">
                            <i class="bi bi-trash"></i>Delete
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@await Html.PartialAsync("_CreateItem","City")