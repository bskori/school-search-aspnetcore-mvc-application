@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Future Stage - Site Admin</title>

    <link rel="shortcut icon" type="image/x-icon" href="~/SiteAdminAssets/img/favicon.png" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/toastr/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/SiteAdminAssets/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">


    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/SiteAdminAssets/js/CustomJS.js"></script>

</head>
<body>

    <div class="wrapper">



        <nav id="sidebar">
            <div class="sidebar-header">

                <div class="logo">
                    <h4 class="shadow bg-light p-1 ps-3">FUTURE<span>STAGE</span></h4>
                </div>

            </div>


            
                    @if (Context.Session.GetString("Name") != null)
                    {
                <p class="text-center">
                    Welcome -
                    <span class="text-dark bg-white fw-bold p-2 ">Mr. @Context.Session.GetString("Name")</span>
                </p>
                    }
                    
                <ul class="list-unstyled components">
                    <li>
                        <a asp-action="Index" asp-controller="Home" asp-area="SiteAdmin" class="bg-white text-primary mb-3 text-center">
                            <i class="fas fa-chart-line"></i>
                            Dashboard

                        </a>
                        <a href="#homeSubmenu" role="button" aria-controls="homeSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle dropdown font-weight-bold">
                            Config <i class="fas fa-gear ms-1"></i>
                        </a>
                        <ul class="collapse list-unstyled" id="homeSubmenu">
                            <li>
                                <a asp-action="Index" asp-controller="State" asp-area="SiteAdmin">State</a>
                            </li>
                            <li>
                                <a asp-action="Index" asp-controller="City" asp-area="SiteAdmin">
                                    City
                                </a>
                            </li>
                            <li>
                                <a asp-action="Index" asp-controller="Area" asp-area="SiteAdmin">Area</a>
                            </li>
                        </ul>
                    </li>

                    <li>
                        <a href="#pageSubmenu" aria-controls="pageSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle dropdown font-weight-bold">  App Config <i class="fa-solid fa-gears ms-1"></i> </a>
                        <ul class="collapse list-unstyled" id="pageSubmenu">
                            <li>
                                <a asp-action="Index" asp-controller="Facility" asp-area="SiteAdmin">Facility</a>
                            </li>
                            <li>
                                <a asp-action="Index" asp-controller="Standard" asp-area="SiteAdmin">Standard</a>
                            </li>
                            <li>
                                <a asp-action="Index" asp-controller="EducationBoard" asp-area="SiteAdmin">Education Board</a>
                            </li>
                            <li>
                                <a asp-action="Index" asp-controller="Quota" asp-area="SiteAdmin">Quota</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#">About</a>
                    </li>
                    <li>
                        <a href="#">Service</a>
                    </li>
                    <li>
                        <a href="#">Contact</a>
                    </li>
                </ul>
            </nav>

        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light">

                <button type="button" id="sidebarCollapse" class="btn">
                    <span class="toggle-icon"></span>
                </button>



                <a class="navbar-toggler" asp-action="Logout" asp-controller="ManageSiteAdmin" asp-area="">
                    <i class="fa fa-sign-out-alt"></i>
                </a>



                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a asp-action="Logout" asp-controller="ManageSiteAdmin" asp-area="" id="logoutButton" class="btn">
                                <i class="fa fa-sign-out-alt"></i>
                            </a>

                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid">
                @RenderBody()

            </div>

        </div>
    </div>










    @if (TempData["SuccessMessage"] != null)
    {
        <script>
        $(function () {
            toastr.success('@TempData["SuccessMessage"]', 'Succes Alert', {timeOut:3000, "closeButton" : true});
        });
        </script>
    }
    <script>
        $(document).ready(function () {
            $("#sidebarCollapse").on('click', function () {
                $("#sidebar").toggleClass('active');
            });
        })
    </script>
    <script>
        $(document).ready(function () {
            $('#iconCreateInput').on('input', function () {
                var iconClass = $(this).val();
                $('#displayCreateIcon').attr('class', iconClass + " text-dark mx-auto");
            });
        });
    </script>

</body>
</html>