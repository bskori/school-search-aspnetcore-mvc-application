@model Area

@{ 
    ViewData["Title"] = "Delete Area";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2 class="alert alert-danger text-center py-3 my-5">Are you sure, you want to delete?</h2>
    </div>
    <div class="col-md-6 offset-md-3">
        <div class="mb-3">
            <label class="form-label" asp-for="AreaName"></label>
            <input class="form-control" asp-for="AreaName" readonly />
        </div>
        <div class="mb-4">
            <label class="form-label" asp-for="City.CityName"></label>
            <input class="form-control" asp-for="City.CityName" readonly />
        </div>
        <div class="mb-3">
            <form asp-action="Delete">
                <a class=" btn btn-outline-secondary" asp-action="Index">Back to List</a>
                <input asp-for="ID" type="hidden" />
                <input class="btn btn-danger text-white float-end" type="submit" value="Confirm" />
            </form>
        </div>
    </div>
</div>