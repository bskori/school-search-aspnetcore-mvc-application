@model IEnumerable<Area>

@{  
    ViewData["Title"] = "List of Areas";
}

<div class="row">
    <div class="col-md-12">
        <h2 class="text-success text-center shadow py-3 ">List of Areas</h2>
    </div>
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th class="align-middle">@Html.DisplayNameFor(m => m.AreaName)</th>
                    <th class="align-middle">@Html.DisplayNameFor(m => m.City.CityName)</th>
                    <th class="align-middle">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
            {
                <tr class="text-center">
                    <td class="align-middle">@item.AreaName</td>
                    <td class="align-middle">@item.City.CityName</td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ID">
                        <i class="bi bi-pencil-square"></i>Edit</a>
                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.ID">
                        <i class="bi bi-trash"></i>Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@await Html.PartialAsync("_CreateItem","Area")