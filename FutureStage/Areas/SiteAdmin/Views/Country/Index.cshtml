@model IEnumerable<Country>

@{ 
    ViewData["Title"] = "List of Countries";
}

    <div class="row">
        <div class="col-md-8 offset-md-2 mt-5">
            <h2 class="text-center text-success shadow py-2 my-5">List of Countries</h2>
        </div>
        <div class="col-md-8 offset-md-2">
            <table class="table">
                <thead>
                    <tr class="text-center">
                        <th>@Html.DisplayNameFor(m => m.CountryName)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
            {
                <tr class="text-center">
                    <td class="align-middle">
                        @item.CountryName
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ID">
                            <i class="fa-regular fa-pen-to-square"></i>
                        </a>
                        |
                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.ID">
                            <i class="fa-regular fa-trash-can"></i>
                        </a>
                    </td>
                </tr>
            }
                </tbody>
            </table>
        </div>
    </div>

@await Html.PartialAsync("_CreateItem","Country")