@model Country

@{ 
    ViewData["Title"] = "Add new country";
}

<div class="row">
    <div class="col-md-6 offset-md-3 mt-5">
        <h2 class="text-success text-center shadow py-2 my-5">Add new country</h2>
    </div>
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-4">
                <label class="form-label" asp-for="CountryName"></label>
                <input class="form-control" asp-for="CountryName" />
                <span class="text-danger" asp-validation-for="CountryName"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                <input class="btn btn-outline-success float-end" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>