@model Country

@{ 
    ViewData["Title"] = "Delete country";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2 class="alert alert-danger  text-center py-3 my-5">Are you sure, you want to delete this?</h2>
    </div>
    <div class="col-md-6 offset-md-3">
        <div class="form-group mb-4">
            <label class="form-label" asp-for="CountryName"></label>
            <input class="form-control" asp-for="CountryName" readonly />
        </div>
        <div class="form-group">
            <form asp-action="Delete">
            <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
                <input asp-for="ID" type="hidden" />
                <input class="btn btn-danger text-white float-end" type="submit" value="Confirm" />
            </form>
        </div>
    </div>
</div>