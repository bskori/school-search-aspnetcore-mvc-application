@model State

@{ 
    ViewData["Title"] = "Remove State";
}

<div class="row">
    <div class="col-md-6 offset-md-3 mt-5">
        <h2 class="alert alert-danger text-center py-3 my-5">Are you sure, you want to delete this?</h2>
    </div>
    <div class="col-md-6 offset-md-3">
        <div class="mb-3">
            <label class="form-label" asp-for="StateName"></label>
            <input class="form-control" asp-for="StateName" readonly />
        </div>
        <div class="mb-4">
            <label class="form-label" asp-for="Country.CountryName"></label>
            <input class="form-control" asp-for="Country.CountryName" readonly />
        </div>
        <div class="mb-3">
            <form asp-action="Delete">
            <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
                <input asp-for="ID" hidden />
                <input class="btn btn-danger text-white float-end" type="submit" value="Confirm" />
            </form>
        </div>
    </div>
</div>