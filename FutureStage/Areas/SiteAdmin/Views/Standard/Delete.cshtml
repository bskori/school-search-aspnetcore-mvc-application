@model Standard

@{ 
    ViewData["Title"] = "Delete standard";
}

<div class="row">
    <div class="col-md-6 offset-md-3 mt-5">
        <h2 class="alert alert-danger text-center py-3 my-5">Are you sure, you want to delete this?</h2>
    </div>
    <div class="col-md-6 offset-md-3">
        <div class="mb-3">
            <label class="form-label" asp-for="StandardTitle"></label>
            <input class="form-control" asp-for="StandardTitle" readonly />
        </div>
        <div class="mb-4">
            <label class="form-label" asp-for="StandardDescription"></label>
            <input class="form-control" asp-for="StandardDescription" readonly />
        </div>
        <div class="mb-3">
            <form asp-action="Delete">
                <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                <input type="hidden" asp-for="ID" />
                <input class="btn btn-danger text-white float-right" type="submit" value="Confirm" />
            </form>
        </div>
    </div>
</div>