@model StandardFees

<div class="col-md-8 offset-md-2">
    <h3 class="alert alert-danger text-center my-5">Are you sure, you want to delete this?</h3>
</div>
<div class="col-md-6 offset-md-3">
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <a class="btn btn-outline-secondary" asp-action="Delete">Cancel</a>
        <input type="submit" class="btn btn-danger text-white float-end" value="Confirm" />
    </form>
</div>