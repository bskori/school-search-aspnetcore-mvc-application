@model IEnumerable<SchoolStandard>


<div class="table-wrapper">

    <div class="table-title">
        <div class="row">
            <div class="col-sm-6 p-0 flex justify-content-lg-start justify-content-center">
                <h2 class="ml-lg-2">Manage Standards</h2>
            </div>

            <div class="col-sm-6 p-0 flex justify-content-lg-end justify-content-center">
                <a asp-action="Create" class="btn btn-success">
                    <i class="material-icons">&#xE147;</i>
                    <span>Add New Standard</span>
                </a>
                <a href="#deleteEmployeeModal" class="btn btn-danger" data-toggle="modal">
                    <i class="material-icons">&#xE15C;</i>
                    <span>Delete</span>
                </a>
            </div>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr class="text-center">
                <th>
                    Sr. No
                </th>
                <th>Standard</th>
                <th>Intake Capacity</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @{ int no = 1;
                foreach (var item in Model)
                {
                    <tr class="text-center">
                        <th>
                            @no
                        </th>
                        <th>@item.Standard.StandardName</th>
                        <th>@item.IntakeCapacity</th>
                        <th>
                            <a asp-action="Edit" asp-route-id="@item.ID" class="edit text-primary">
                                <i class="material-icons" title="Edit">&#xE254;</i>
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.ID" class="delete text-danger">
                                <i class="material-icons" title="Delete">&#xE872;</i>
                            </a>
                        </th>
                    </tr>

                    no++;
                }
            }
        </tbody>


    </table>

    <div class="clearfix">
        <div class="hint-text">showing <b>5</b> out of <b>25</b></div>
        <ul class="pagination">
            <li class="page-item disabled"><a href="#">Previous</a></li>
            <li class="page-item "><a href="#" class="page-link">1</a></li>
            <li class="page-item "><a href="#" class="page-link">2</a></li>
            <li class="page-item active"><a href="#" class="page-link">3</a></li>
            <li class="page-item "><a href="#" class="page-link">4</a></li>
            <li class="page-item "><a href="#" class="page-link">5</a></li>
            <li class="page-item "><a href="#" class="page-link">Next</a></li>
        </ul>
    </div>









</div>