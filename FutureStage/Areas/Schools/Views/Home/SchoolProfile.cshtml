@model FutureStage.Models.School

@{
    ViewData["Title"] = "SchoolProfile";
}

<div class="row">
    <div class="text-center">
        <h2 class="alert alert-primary mt-2">Shool Profile</h2>
    </div>
    <div class="col-md-12">
        <a class="btn btn-danger my-3" asp-action="UpdateSchoolProfile" asp-route-id="@Model.ID">Update School Profile</a>
        <table class="table table-striped table-hover">
            <tbody>
                <tr>
                    <td class="fs-6">School Name</td>
                    <td>:</td>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <td class="fs-6">Email</td>
                    <td>:</td>
                    <td>@Model.EmailID</td>
                </tr> 
                <tr>
                    <td class="fs-6">Address</td>
                    <td>:</td>
                    <td>@Model.Address</td>
                </tr>
                <tr>
                    <td class="fs-6">Establishment Date</td>
                    <td>:</td>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <td class="fs-6">Area</td>
                    <td>:</td>
                    <td>@Model.Area.AreaName</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>