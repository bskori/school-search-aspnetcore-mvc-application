@model ChangePasswordVM

@{
    ViewData["Title"] = "Change Password";
}

<div class="container " id="change-password-body">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="password-card">
                <div class="card-body">
                    <h2 class="card-title">Change Password</h2>
                    <form asp-action="ChangePassword" class="needs-validation" novalidate>
                        <div>
                            <input type="hidden" asp-for="ID" />
                        </div>
                        <div class="form-group">
                            <label asp-for="CurrentPassword">Current Password</label>
                            <input type="password" class="form-control" asp-for="CurrentPassword" id="currentPassword" placeholder="Enter current password" required>
                            <small><span class="text-danger" asp-validation-for="CurrentPassword"></span></small>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">New Password</label>
                            <input type="password" class="form-control" asp-for="Password" id="newPassword" placeholder="Enter new password" required>
                            <small><span class="text-danger" asp-validation-for="Password"></span></small>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword">Confirm New Password</label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control" id="confirmPassword" placeholder="Confirm new password" required>
                            <small><span class="text-danger" asp-validation-for="ConfirmPassword"></span></small>
                        </div>
                        <button type="submit" class="btn custom-btn-primary text-white">Change Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
