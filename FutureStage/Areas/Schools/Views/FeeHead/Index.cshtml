@model FeeHead


<div class="table-wrapper">
    @if (TempData["AlertMessage"] != null)
    {
        <div class="col-md-12 my-2">
            <div class="alert alert-hide alert-success alert-dismissible fade show" role="alert">
                <strong>Success!</strong>  @TempData["AlertMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }
    <div class="table-title">
        <div class="row">
            <div class="col-sm-6 p-0 flex justify-content-lg-start justify-content-center">
                <h2 class="ml-lg-2">Manage  Facilities</h2>
            </div>

            <div class="col-sm-6 p-0 flex justify-content-lg-end justify-content-center">
                <a data-bs-target="#addEmployeeModal" data-bs-toggle="modal" class="btn btn-lg btn-success">
                    <i class="material-icons">&#xE147;</i>
                    <span>Add New Facility</span>
                </a>
            </div>
        </div>
    </div>

    <table class="table table-bordered table-hover">
        <thead>
            <tr class="text-center">
                <th class="align-items-center">
                    Sr. No
                </th>
                <th class="align-items-center">Title</th>

                <th class="align-items-center">Actions</th>
            </tr>
        </thead>

        <tbody>
            @{ int no = 1;
                foreach (var item in ViewBag.FeeHeads)
                {
                    <tr class="text-center">
                        <td class="align-items-center">
                            @no
                        </td>
                        <td>@item.FeeHeadName</td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID" class="edit text-primary">
                                <i class="material-icons" title="Edit">&#xE254;</i>
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.ID" class="delete text-danger">
                                <i class="material-icons" title="Delete">&#xE872;</i>
                            </a>
                        </td>
                    </tr>

                    no++;
                }
            }





        </tbody>


    </table>

    <div class="clearfix">
        <div class="hint-text">showing <b>5</b> out of <b>25</b></div>
        <ul class="pagination">
            <li class="page-item disabled"><a href="#">Previous</a></li>
            <li class="page-item "><a href="#" class="page-link">1</a></li>
            <li class="page-item "><a href="#" class="page-link">2</a></li>
            <li class="page-item active"><a href="#" class="page-link">3</a></li>
            <li class="page-item "><a href="#" class="page-link">4</a></li>
            <li class="page-item "><a href="#" class="page-link">5</a></li>
            <li class="page-item "><a href="#" class="page-link">Next</a></li>
        </ul>
    </div>



